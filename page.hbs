{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customize it to behave differently if you prefer. }}
{{#post}}
	{{#if feature_image}}<div class="header-image" style="background-image: url('{{img_url feature_image}}');"></div>{{/if}}
{{/post}}

<div class="page-wrap">
    <article class="{{post_class}} hentry">
        {{#post}}
            <header class="entry-header gh-canvas entry-content">
                <h1 class="entry-title">{{{title}}}</h1>
            </header>

            <div class="entry-content gh-content gh-canvas">
                {{content}}
            </div>
        {{/post}}
    </article>
</div>